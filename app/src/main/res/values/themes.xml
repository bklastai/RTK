<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RampTakeHome" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Surface color. -->
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="colorOnSurface">@color/onSurfaceColor</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorOnBackground">@color/onBackgroundColor</item>
        <!-- Error color. -->
        <item name="colorError">@color/errorColor</item>
        <item name="colorOnError">@color/onErrorColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RampTakeHome.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RampTakeHome.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RampTakeHome.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>